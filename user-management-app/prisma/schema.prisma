// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

// Важно: Модель пользователя с уникальным индексом на email
model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique // Обратите внимание: уникальный индекс на email
  password        String
  status          UserStatus @default(UNVERIFIED)
  lastLoginAt     DateTime?
  registrationTime DateTime @default(now())
  verificationToken String?

  // Важно: Дополнительный уникальный индекс на email для гарантии уникальности на уровне БД
  @@unique([email], map: "unique_user_email")
  @@map("users")
}

// Полезно: Перечисление статусов пользователя
enum UserStatus {
  UNVERIFIED
  ACTIVE
  BLOCKED
}

// Важно: Функция для генерации уникального ID
// Полезно: Используется для верификационных токенов
model VerificationToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("verification_tokens")
}
